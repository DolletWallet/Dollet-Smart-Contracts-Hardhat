{
  "overrides": [
    {
      "files": ["*.ts", "*.*.ts", "*.js", "*.*.js"],
      "options": {
        "printWidth": 120,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": true
      }
    },
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "printWidth": 100,
        "singleQuote": false,
        "bracketSpacing": true
      }
    }
  ]
}
